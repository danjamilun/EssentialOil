@model EssentialOil_Products
<div class="col-sm-4 col-lg-4 col-md-4">
 <div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>  
        <h3>
            <a asp-controller="Products"
               asp-action="Details"
               asp-route-id="@Model.EssentialOil_ProductsId">@Model.Name</a>
        </h3>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.EssentialOil_ProductsId">Add to cart</a>
            </p>
        </div>
    </div>
 </div>
</div>
